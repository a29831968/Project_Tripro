<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="16sp"
            android:layout_marginTop="-8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvShare"
            android:layout_marginLeft="47dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvItinerary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvShare"
            android:layout_marginLeft="80dp"
            />

        <TextView
            android:id="@+id/textItinerary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary"
            android:textSize="16sp"
            android:layout_marginTop="-8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItinerary"
            app:layout_constraintLeft_toRightOf="@+id/textShare"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.526"/>


        <TextView
            android:id="@+id/textSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press to Connect"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textItinerary"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/grey_border"
            />




    </android.support.constraint.ConstraintLayout>



</merge>